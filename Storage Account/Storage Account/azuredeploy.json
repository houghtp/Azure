{
  "$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "environment": {
      "type": "string",
      "allowedValues": [ "dev", "prod" ],
      "metadata": {
        "description": "String to determine which network the VM is deployed to."
      }
    },
    "storageAccountNamePrefix": {
      "type": "string",
      "metadata": {
        "description": "String to determine name storage account."
      }
    },
    "accountType": {
      "type": "string",
      "defaultValue": "Standard_LRS",
      "metadata": {
        "description": "String to determine storage account type."
      }
    },
    "kind": {
      "type": "string",
      "defaultValue": "StorageV2",
      "metadata": {
        "description": "String to determine storage account version."
      }
    },
    "accessTier": {
      "type": "string",
      "defaultValue": "Hot",
      "metadata": {
        "description": "String to determine storage account tier."
      }
    }
  },
  "variables": {
    "resourceGroupLocation": "[resourceGroup().location]",
    "storageAccountName": "[concat('sa',parameters('storageAccountNamePrefix'),parameters('environment'),variables('resourceGroupLocation'))]",
    "httpsOnly": "true",
    "softDeleteEnabled": "true",
    "softDeleteRetentionDays": 7
  },
  "resources": [
    {
      "name": "[variables('storageAccountName').tolower]",
      "type": "Microsoft.Storage/storageAccounts",
      "apiVersion": "2018-07-01",
      "location": "[variables('resourceGroupLocation')]",
      "properties": {
        "accessTier": "[parameters('accessTier')]",
        "supportsHttpsTrafficOnly": "[variables('httpsOnly')]"
      },
      "dependsOn": [],
      "sku": {
        "name": "[parameters('accountType')]"
      },
      "kind": "[parameters('kind')]",
      "tags": {
        "Environment": "",
        "Department": ""
      }
    },
    {
      "name": "[concat(variables('storageAccountName'), '/default')]",
      "type": "Microsoft.Storage/storageAccounts/blobServices",
      "apiVersion": "2018-07-01",
      "properties": {
        "deleteRetentionPolicy": {
          "enabled": "[variables('softDeleteEnabled')]",
          "days": "[variables('softDeleteRetentionDays')]"
        }
      },
      "dependsOn": [
        "[concat('Microsoft.Storage/storageAccounts/', variables('storageAccountName'))]"
      ]
    }
  ],
  "outputs": {}
}