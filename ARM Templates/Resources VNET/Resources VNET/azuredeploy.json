{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "vnetSettings": {
      "type":  "object"
    }
  },
  "variables": {},
  "resources": [
    {
      "name": "[parameters('vnetSettings').name]",
      "type": "Microsoft.Network/virtualNetworks",
      "location": "[resourceGroup().location]",
      "apiVersion": "2018-12-01",
      "dependsOn": [],
      "tags": {
        "Environment": "",
        "Department": ""
      },
      "properties": {
        "addressSpace": {
          "addressPrefixes": [
            "[parameters('vnetSettings').addressPrefixes[0].addressPrefix]"
          ]
        },
        "subnets": [
          {
            "name": "[parameters('vnetSettings').subnets[0].name]",
            "properties": {
              "addressPrefix": "[parameters('vnetSettings').subnets[0].addressPrefix]",
              "serviceEndpoints": [
                {
                  "provisioningState": "Succeeded",
                  "service": "Microsoft.Storage",
                  "locations": [
                    "uksouth",
                    "ukwest"
                  ]
                }
              ]
            }
          },
          {
            "name": "[parameters('vnetSettings').subnets[1].name]",
            "properties": {
              "addressPrefix": "[parameters('vnetSettings').subnets[1].addressPrefix]",
              "serviceEndpoints": [
                {
                  "provisioningState": "Succeeded",
                  "service": "Microsoft.Storage",
                  "locations": [
                    "uksouth",
                    "ukwest"
                  ]
                }
              ]
            }
          },
          {
            "name": "[parameters('vnetSettings').subnets[2].name]",
            "properties": {
              "addressPrefix": "[parameters('vnetSettings').subnets[2].addressPrefix]",
              "serviceEndpoints": [
                {
                  "provisioningState": "Succeeded",
                  "service": "Microsoft.Storage",
                  "locations": [
                    "uksouth",
                    "ukwest"
                  ]
                }
              ]
            }
          },
          {
            "name": "[parameters('vnetSettings').subnets[3].name]",
            "properties": {
              "addressPrefix": "[parameters('vnetSettings').subnets[3].addressPrefix]"
            }
          },
          {
            "name": "[parameters('vnetSettings').subnets[4].name]",
            "properties": {
              "addressPrefix": "[parameters('vnetSettings').subnets[4].addressPrefix]"
            }
          }
        ]
      }
    }],
  "outputs": {}
}
