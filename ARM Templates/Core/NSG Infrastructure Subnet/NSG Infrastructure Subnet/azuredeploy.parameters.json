{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentParameters.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "networkSecurityGroupsSettings": {
      "value": {
        "name": "infrastructure",
        "securityRules": [
          {
            "name": "Remote Management Allow",
            "description": "allow RDP/SSH connections",
            "direction": "Inbound",
            "priority": 100,
            "sourceAddressPrefix": "192.168.0.0/24",
            "destinationAddressPrefix": "10.0.0.0/24",
            "sourcePortRange": "*",
            "destinationPortRanges": [ "3389", "22" ],
            "access": "Allow",
            "protocol": "Tcp"
          },
          {
            "name": "AD Allow",
            "description": "allow AD/LDAP client authentication connections",
            "direction": "Inbound",
            "priority": 110,
            "sourceAddressPrefix": "*",
            "destinationAddressPrefix": "10.0.0.0/24",
            "sourcePortRange": "*",
            "destinationPortRanges": [ "389", "636", "3268", "3269", "88", "53", "445", "25", "135", "123" ],
            "access": "Allow",
            "protocol": "Tcp"
          }
        ]
      }
    }
  }
}